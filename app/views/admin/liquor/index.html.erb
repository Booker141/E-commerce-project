<table>
  <tr>
    <th><a href="?sort_by=producer_id">Productor</a></th>
    <th><a href="?sort_by=name">Nombre</a></th>
    <th><a href="?sort_by=graduation">Graduación</a></th>
    <th colspan="3"></th>
  </tr>

<% @liquors.each do |liquor| %>
  <tr>
    <td><%= h liquor.producer.name %></td>
    <td><%= h liquor.name %></td>
    <td><center><%= h liquor.graduation %></center></td>
    <td><%= link_to 'Mostrar', :action => 'show', :id => liquor %></td>
    <td><%= link_to 'Editar', :action => 'edit', :id => liquor  %></td>
    <td><%= button_to 'Eliminar', { :action => 'destroy', :id => liquor },
                      data: { confirm: "¿Está seguro de que quiere eliminar el licor #{liquor.name}?" } %>
  </tr>
<% end %>
</table>
<br/>
<%= will_paginate @liquors, :page_links => false, :link_separator => ' | ',
                          :previous_label => 'Página anterior', :next_label => 'Página siguiente' %>
<p><%= link_to 'Añadir un nuevo licor', :action => 'new' %></p>
